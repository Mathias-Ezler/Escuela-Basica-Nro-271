<header class="bg-gradient-to-r from-blue-50 to-white border-b border-blue-100 p-4 lg:p-6 fixed w-full top-0 left-0 z-50 shadow-sm">
  <div class="container mx-auto flex items-center justify-between">
    <!-- Logo -->
    <div id="header-title" class="text-blue-950 text-lg md:text-xl font-semibold font-sans tracking-tight">
      <a href="/" class="hover:text-blue-700 transition-colors duration-200 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
        </svg>
        <span>Escuela Básica N° 271 Don Carlos Antonio López</span>
      </a>
    </div>

    <!-- Navigation for large screens -->
    <nav class="hidden lg:block">
      <ul class="flex space-x-8 text-blue-950 font-medium">
        <li>
          <a href="/" class="hover:text-blue-600 transition-colors duration-200 relative after:absolute after:left-0 after:bottom-0 after:h-0.5 after:w-0 after:bg-blue-600 after:transition-all hover:after:w-full">
            Inicio
          </a>
        </li>
        <li>
          <a href="/sobre-nosotros" class="hover:text-blue-600 transition-colors duration-200 relative after:absolute after:left-0 after:bottom-0 after:h-0.5 after:w-0 after:bg-blue-600 after:transition-all hover:after:w-full">
            Sobre Nosotros
          </a>
        </li>
        <li>
          <a href="/admisiones" class="hover:text-blue-600 transition-colors duration-200 relative after:absolute after:left-0 after:bottom-0 after:h-0.5 after:w-0 after:bg-blue-600 after:transition-all hover:after:w-full">
            Admisiones
          </a>
        </li>
        <li>
          <a href="/contacto" class="hover:text-blue-600 transition-colors duration-200 relative after:absolute after:left-0 after:bottom-0 after:h-0.5 after:w-0 after:bg-blue-600 after:transition-all hover:after:w-full">
            Contacto
          </a>
        </li>
      </ul>
    </nav>

    <!-- Enrollment button for large screens -->
    <div class="hidden lg:block">
      <a href="/inscripciones" class="bg-blue-600 text-white font-semibold py-2.5 px-6 rounded-lg hover:bg-blue-700 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-0.5">
        Inscripciones
      </a>
    </div>

    <!-- Hamburger menu for small screens -->
    <button id="menu-toggle" class="lg:hidden text-blue-950 p-2 hover:bg-blue-50 rounded-lg transition-colors duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <nav id="mobile-menu" class="lg:hidden bg-white text-blue-950 hidden border-t border-blue-100 mt-4">
    <ul class="flex flex-col space-y-4 py-6 px-4">
      <li>
        <a href="/" class="block py-2 px-4 hover:bg-blue-50 rounded-lg transition-colors duration-200">
          Inicio
        </a>
      </li>
      <li>
        <a href="/sobre-nosotros" class="block py-2 px-4 hover:bg-blue-50 rounded-lg transition-colors duration-200">
          Sobre Nosotros
        </a>
      </li>
      <li>
        <a href="/admisiones" class="block py-2 px-4 hover:bg-blue-50 rounded-lg transition-colors duration-200">
          Admisiones
        </a>
      </li>
      <li>
        <a href="/contacto" class="block py-2 px-4 hover:bg-blue-50 rounded-lg transition-colors duration-200">
          Contacto
        </a>
      </li>
      <li class="pt-2">
        <a href="/inscripciones" class="block bg-blue-600 text-white text-center font-semibold py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors duration-200">
          Inscripciones
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const headerTitle = document.getElementById('header-title');

    // Update header title based on screen size
    const updateHeaderTitle = () => {
      if (headerTitle) {
        const titleContent = window.innerWidth < 768 
          ? '<a href="/" class="hover:text-blue-700 transition-colors duration-200 flex items-center gap-2"><svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg><span>Escuela Básica N° 271</span></a>'
          : '<a href="/" class="hover:text-blue-700 transition-colors duration-200 flex items-center gap-2"><svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg><span>Escuela Básica N° 271 Don Carlos Antonio López</span></a>';
        headerTitle.innerHTML = titleContent;
      }
    };

    // Initialize and add resize listener
    updateHeaderTitle();
    window.addEventListener('resize', updateHeaderTitle);

    // Toggle mobile menu with animation
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        
        // Optional: Add slide animation
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.style.maxHeight = '0';
          mobileMenu.style.opacity = '0';
          requestAnimationFrame(() => {
            mobileMenu.style.transition = 'max-height 300ms ease-out, opacity 200ms ease-out';
            mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
            mobileMenu.style.opacity = '1';
          });
        } else {
          mobileMenu.style.maxHeight = '0';
          mobileMenu.style.opacity = '0';
        }
      });
    }
  });
</script>